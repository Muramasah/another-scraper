{
  "name": "another-scraper",
  "jest": {
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "verbose": true,
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "moduleFileExtensions": [
      "js"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ]
  },
  "version": "0.0.1",
  "description": "Node scraper microservice",
  "main": "index.js",
  "scripts": {
    "build:app": "node node_modules/webpack/bin/webpack.js --config ./src/webpack.config.js",
    "build:test": "node node_modules/webpack/bin/webpack.js --config ./src/test/webpack.config.js",
    "test": "export NODE_ENV=testing && jest --no-cache",
    "watch": "export NODE_ENV=testing && jest --watch",
    "coverage": "export NODE_ENV=testing && jest --coverage"
  },
  "devDependencies": {
    "babel": "^6.23.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-jest": "^21.2.0",
    "babel-loader": "^7.1.2",
    "babel-preset-es2015": "^6.24.1",
    "cheerio": "latest",
    "fs": "^0.0.1-security",
    "helper-tools": "^0.2.6",
    "jest": "^21.2.1",
    "net": "^1.0.2",
    "regenerator-runtime": "^0.11.0",
    "request": "^2.83.0",
    "tls": "^0.0.1",
    "webpack": "^3.5.5"
  },
  "keywords": [
    "node",
    "scraper"
  ],
  "author": "Xavier Felipe Medina <medina.xavier.felipe@gmail.com>",
  "license": "GPL-3.0"
}